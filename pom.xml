<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.chase.battleship</groupId>
    <artifactId>battleship2</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- Java version -->
        <maven.compiler.release>21</maven.compiler.release>

        <javafx.version>21.0.2</javafx.version>
        <javafx.modules>javafx.controls,javafx.graphics,javafx.base</javafx.modules>
        <!-- Your main class for running -->
        <exec.mainClass>com.chase.battleship.gui.GameApp</exec.mainClass>
    </properties>

    <!-- ==========  Add JavaFX Dependencies  ========== -->
    <dependencies>
        <!-- existing deps ... -->

        <!-- JavaFX base + controls (GUI widgets) -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier>
        </dependency>
    </dependencies>


    <!-- ==========  Add JavaFX Maven Plugin  ========== -->
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>assets</directory>
                <targetPath>assets</targetPath>
            </resource>
        </resources>
        <plugins>
            <!-- other plugins ... -->

            <!-- Create jar with manifest and place it in target/mods -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${exec.mainClass}</mainClass>
                        </manifest>
                    </archive>
                    <outputDirectory>${project.build.directory}/mods</outputDirectory>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>com.chase.battleship.gui.GameApp</mainClass>
                </configuration>
            </plugin>

            <!-- Package a Windows .exe with bundled runtime -->
            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <!-- point to folder containing main jar + dependencies -->
                    <input>${project.build.directory}/mods</input>
                    <mainJar>${project.build.finalName}.jar</mainJar>
                    <mainClass>${exec.mainClass}</mainClass>
                    <name>Battleship</name>
                    <!-- jpackage version must be numeric (no SNAPSHOT) -->
                    <appVersion>1.0.0</appVersion>
                    <vendor>Chase</vendor>
                    <!-- Portable bundle with embedded launcher (no installer) -->
                    <type>APP_IMAGE</type>
                    <!-- jpackage output directory -->
                    <destination>${project.build.directory}/jpackage</destination>
                    <icon>${project.basedir}/assets/images/icon.ico</icon>
                    <javaOptions>
                        <option>--module-path=$APPDIR</option>
                        <option>--add-modules=${javafx.modules}</option>
                        <option>--enable-native-access=javafx.graphics</option>
                    </javaOptions>
                    <!-- Classpath mode so bundled jars are included at launch -->
                    <classPath>*</classPath>
                    <winConsole>true</winConsole>
                </configuration>
            </plugin>

            <!-- Copy runtime dependencies alongside the main jar so jpackage picks them up (JavaFX, etc.) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/mods</outputDirectory>
                            <includeScope>runtime</includeScope>
                            <excludeTransitive>false</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
